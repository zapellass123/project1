//Modal
.md-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 50%;
  max-width: 630px;
  min-width: 320px;
  height: auto;
  z-index: 2000;
  transform: translateX(-50%) translateY(-50%);
  visibility: visible;
}

.md-overlay {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.42);
  transition: all 0.3s;
  opacity: 1;
  visibility: visible;
}

.default-theme {
  font-family: Helvetica Neue;
  .md-content {
    color: #fff;
    background: #0C9;
    position: relative;
    border-radius: 3px;
    .md-title {
      margin: 0;
      padding: 0.4em;
      text-align: center;
      font-size: 1.5em;
      font-weight: 300;
      opacity: 0.8;
      background: rgba(0, 0, 0, 0.1);
      border-radius: 3px 3px 0 0;
    }
    .md-body {
      margin: 0;
      font-weight: 300;
      font-size: 1.15em;
      border-radius: 3px;
      padding: 15px;
      overflow-y: auto;
    }
    .md-close {
      position: absolute;
      top: -31px;
      right: 0;
      border: solid 1px #fff;
      width: 25px;
      height: 25px;
      text-align: center;
      line-height: 25px;
      border-radius: 360px;
      cursor: pointer;
      font-size: 14px;
    }
    button {
      border: none;
      padding: 0.6em 1.2em;
      background: #0C9;
      color: #fff;
      font-family: 'Open Sans', Calibri, Arial, sans-serif;
      font-size: .75em;
      letter-spacing: 1px;
      text-transform: uppercase;
      cursor: pointer;
      display: inline-block;
      margin: 3px 2px;
      border-radius: 2px;
      &:focus {
        outline: 0;
      }
    }
  }
}

.md-content {
  margin: 0 auto;
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.md-modal-enter {
  .md-content {
    transform: scale(0.7);
    opacity: 0;
  }
  &.md-modal-enter-active .md-content {
    transform: scale(1);
    opacity: 1;
  }
}

.md-modal-leave {
  .md-content {
    opacity: 1;
    transform: scale(1);
  }
  &.md-overlay {
    opacity: 1;
  }
  &.md-modal-leave-active {
    .md-content {
      opacity: 0.00;
      transform: scale(0.7);
    }
    &.md-overlay {
      opacity: 0;
    }
  }
}

